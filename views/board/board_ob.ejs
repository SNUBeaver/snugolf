<% include ../partials/header %>
<div class="container">
<div class="row">
<div class="col-md-3">
	<div class="padding_side"></div>
<div class="ui inverted vertical menu">
  <a href="/about" class=" item">
    About
  </a>
  <a href="/activity" class="item">
    Gallery
  </a>
  <a href="/board" class="item">
    YB Board
  </a>
  <a href="/boardob" class="active item">
    OB Board
  </a>
</div>
</div>
<div class="col-md-9">        
        
    
<!--//////////////////////////////////////////////////////////////-->
<div style="padding: 10px 0;" class="ui main text container">
	<div class="ui huge header">OB 게시판</div>
	<div class="text-right"><a href="/boardob/new" class="ui small floated basic blue button">새 글</a></div>
    <div class="ui top attached segment">
	<div class="ui divided items">
		<% board.forEach(function(board){%>
			<% if(board.author.username=="Admin"){%>
				<div class="item">
					<div class="content">
					<a  class="header" href="/boardob/<%=board._id%>"><i class="alarm icon"></i> <%=board.title%></a> 
			    <div class="meta">
			        <span ><%=board.created.toDateString()%></span>
			        <p>written by <%=board.author.username%></p>
			    </div>
			    <div class="extra">
			        <a class="ui floated mini basic violet button" href="/boardob/<%=board._id%>">
			            Read More <i class="right chevron icon"></i></a>
			    </div>
			    </div></div>
			<% }else{ %>
				<div class="item">
					<div class="content">
			    <a class="header" href="/boardob/<%=board._id%>">  <%=board.title%></a> 
			    <div class="meta">
			        <span ><%=board.created.toDateString()%></span>
			        <p>written by <%=board.author.username%></p>
			    </div>
			    <div class="extra">
			        <a class="ui floated mini basic violet button" href="/boardob/<%=board._id%>">
			            Read More <i class="right chevron icon"></i></a>
			    </div>
			    </div>
			    </div>
			   <% } %>  
		<% }) %>            
		</div>
	</div>
	
	<div class="empty"></div>
	<div class="ui one column stackable center aligned page grid">
			<p class="right-align">
				<form action="/boardob" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" class="form-control">
						<input type="submit" value="검색" class="btn btn-default">
					</div>
				</form>
			</p>
	</div>

	<div class="row text-center">
	    <% if (pages && pages > 0) { %>
	    <ul class="pagination text-center">
	        <% if (current == 1) { %>
	        <li class="disabled"><a>First</a></li>
	        <% } else { %>
	        <li><a href="/boardob<%if(search){%>?search=<%=search%><%}%>">First</a></li>
	        <% } %>
	 
	        <% if (current == 1) { %>
	        <li class="disabled"><a>«</a></li>
	        <% } else { %>
	        <li><a href="/boardob?page=<%= Number(current) - 1 %><%if(search){%>&search=<%=search%><%}%>">«</a></li>
	        <% } %>
	 
	        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
	        <% if (i !== 1) { %>
	        <li class="disabled"><a>...</a></li>
	        <% } %>
	        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
	        <% if (i == current) { %>
	        <li class="active"><a><%= i %></a></li>
	        <% } else { %>
	        <li><a href="/boardob?page=<%= i %><%if(search){%>&search=<%=search%><%}%>"><%= i %></a></li>
	        <% } %>
	        <% if (i == Number(current) + 4 && i < pages) { %>
	        <li class="disabled"><a>...</a></li>
	        <% } %>
	        <% } %>
	 
	        <% if (current == pages) { %>
	        <li class="disabled"><a>»</a></li>
	        <% } else { %>
	        <li><a href="/boardob?page=<%= Number(current) + 1 %><%if(search){%>&search=<%=search%><%}%>">»</a></li>
	        <% } %>
	 
	        <% if (current == pages) { %>
	        <li class="disabled"><a>Last</a></li>
	        <% } else { %>
	        <li><a href="/boardob?page=<%= pages %><%if(search){%>&search=<%=search%><%}%>">Last</a></li>
	        <% } %>
	    </ul>
	    <% } %>
	</div>
	
	
	
	
</div>








        

      
</div>
</div>


<% include ../partials/footer %>