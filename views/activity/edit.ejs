<% include ../partials/header %>
<div class="container">
    <div class="row">
<h1 style="text-align:center;">본문 수정</h1>
<div style="width:30%; margin:30px auto;">
<form action="/activity/<%=act._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
    <div class="form-group">
    <input class="form-control" type="text" name="act[name]" value="<%=act.name%>">
    </div><div class="form-group">
    <!--<input class="form-control" type="text" name="act[image]" value="<%=act.image%>">-->
    <label for="image">이미지 수정</label>
    <input type="file" id="image" name="image" accept="image/*" required>
    </div><div class="form-group">
    <textarea class="form-control" name="act[description]" ><%- act.description%></textarea>
    </div><div class="form-group">
    <button class="btn btn-lg btn-block btn-primary" >Submit</button></div>
</form>
<a href="/activity">Back</a>
</div>

</div>
</div>
<% include ../partials/footer %>